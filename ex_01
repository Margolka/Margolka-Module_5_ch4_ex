from faker import Faker

person = Faker("pl_PL")
from datetime import datetime


class BaseContact:
    def __init__(self, first_name, last_name, mail, private_phone):
        self.first_name = first_name
        self.last_name = last_name
        self.mail = mail
        self.private_phone = private_phone

    def contact(self):
        return f"Wybieram numer {self.private_phone} i dzwoniÄ™ do {self.first_name} {self.last_name}"


def time_count(func):
    def wrapper():
        start = datetime.now()
        func()
        end = datetime.now()
        elapsed_time = end - start
        return print(elapsed_time)

    return wrapper


@time_count
def create():
    base_contact_list = []
    for _ in range(1000):
        base_contact_list.append(
            BaseContact(
                first_name=person.first_name(),
                last_name=person.last_name(),
                mail=person.email(),
                private_phone=person.phone_number(),
            )
        )
    for card in base_contact_list:
        print(card.contact())


if __name__ == "__main__":
    create()
